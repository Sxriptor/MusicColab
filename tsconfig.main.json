{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/main",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES2020"
  },
  "include": [
    "src/main/**/*",
    "src/services/**/*",
    "src/models/**/*",
    "src/utils/**/*"
  ],
  "exclude": ["node_modules", "dist", "src/renderer/**/*"]
}
